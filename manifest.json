{
  "manifest_version": 3,
  "name": "京东竞品分析助手",
  "description": "在京东商品详情页抓取标题、价格、评分和评论总数，并在弹窗中展示。",
  "version": "1.0.0",
  "action": {
    "default_title": "京东竞品分析助手",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://item.jd.com/*",
    "https://*.jd.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://item.jd.com/*",
        "https://*.jd.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
